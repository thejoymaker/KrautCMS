
{% extends '@Theme/base.html.twig' %}

{% block title %}Create New Page{% endblock %}

{% block content %}
    <h1>Create New Page</h1>
    <form method="post" action="{{ path('page_create') }}">
        <div>
            <label for="slug">Slug:</label>
            <input type="text" id="slug" name="slug" value="{{ page.slug|default('') }}" required>
            {% if errors.slug %}
                <div class="error">{{ errors.slug }}</div>
            {% endif %}
        </div>
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="metadata[title]" value="{{ page.metadata.title|default('') }}" required>
            {% if errors.title %}
                <div class="error">{{ errors.title }}</div>
            {% endif %}
        </div>
        <div>
            <label for="content">Content:</label><br>
            <textarea id="content" name="content" rows="20" cols="80" required>{{ page.content|default('')|nl2br }}</textarea>
            {% if errors.content %}
                <div class="error">{{ errors.content }}</div>
            {% endif %}
        </div>
        <div>
            <button type="submit">Create</button>
            <a href="{{ path('page_list') }}">Cancel</a>
        </div>
    </form>
{% endblock %}