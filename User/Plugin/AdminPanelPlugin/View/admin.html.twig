{% extends '@AdminPanelPlugin/admin.base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin.css">
    <script src="/assets/js/admin.js" defer></script>
{% endblock %}

{% block header %}
    <div id="admin-header">
        <nav>
            <button id="menu-toggle" aria-label="Toggle navigation">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3 6H21V8H3V6ZM3 11H21V13H3V11ZM3 16H21V18H3V16Z" fill="currentColor"/>
                </svg>
            </button>
            <ul id="admin-nav">
                <li><a href="/" target="_blank" >Home</a></li>
                {# core sections #}
                <li><a href="#" data-section="dashboard" class="active">Dashboard</a></li>
                <li><a href="#" data-section="plugins">Plugins</a></li>
                <li><a href="#" data-section="themes">Themes</a></li>
                <li><a href="#" data-section="settings">Settings</a></li>
                <li><a href="#" data-section="logs">Logs</a></li>
                {# plugin sections #}
                {# TODO: generate the plugin links dynamically  #}
                <li><a href="#" data-section="users">*Users*</a></li>
                <li><a href="#" data-section="content">*Content*</a></li>
                <li><a href="/user/logout">Logout</a></li>
            </ul>
        </nav>
    </div>
{% endblock %}

{% block content %}
    <h2>{{label('adminpanelplugin.labels.adminpanel')}}</h2>
    <section id="dashboard" class="admin-section">
        <h3>Overview</h3>
        <div class="stats">
            <div class="stat">
                <h4>Cache</h4>
                <p><a href="#" id="clear_cache" data-action="clear-cache">Clear Cache</a></p>
            </div>
            <div class="stat">
                <h4>Session</h4>
                <p><a href="#" id="clear_session" data-action="clear-session">Clear Session</a></p>
            </div>
            <div class="stat">
                <h4>Active Sessions</h4>
                <p>78</p>
            </div>
            <div class="stat">
                <h4>Total Users</h4>
                <p>123</p>
            </div>
            <div class="stat">
                <h4>Total Posts</h4>
                <p>456</p>
            </div>
            <div class="stat">
                <h4>Active Sessions</h4>
                <p>78</p>
            </div>
        </div>
    </section>

    <section id="plugins" class="admin-section" style="display: none;">
        <h3><a href="#" id="manage-plugins-link">Manage Plugins</a>
         | <a href="#" id="plugin-store-link">Plugin Store</a></h3>
        <div id="plugins-container">
            <p>Loading plugins...</p>
        </div>
        <div id="store-container" style="display: none;">
            <p>Loading store...</p>
        </div>
    </section>

    <section id="themes" class="admin-section" style="display: none;">
        <h3>Manage Themes</h3>
        <div id="themes-container">
            <p>Loading themes...</p>
        </div>
    </section>

    <section id="settings" class="admin-section" style="display: none;">
        <h3>Settings</h3>
        <div id="settings-container">
            <p>Loading settings...</p>
        </div>
    </section>

    <section id="logs" class="admin-section" style="display: none;">
        <h3>Logs</h3>
        <div id="logs-container">
            <p>Loading logs...</p>
        </div>
    </section>

    <section id="users" class="admin-section" style="display: none;">
        <h3>Manage Users</h3>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>admin</td>
                    <td>admin@example.com</td>
                    <td>Administrator</td>
                    <td>
                        <a href="/admin/users/edit/1">Edit</a>
                        <a href="/admin/users/delete/1">Delete</a>
                    </td>
                </tr>
                <!-- More user rows -->
            </tbody>
        </table>
    </section>

    <section id="content" class="admin-section" style="display: none;">
        <h3>Manage Content</h3>
        <button onclick="window.location.href='/admin/content/create'">Create New Post</button>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Welcome to KrautCMS</td>
                    <td>admin</td>
                    <td>2023-10-01</td>
                    <td>
                        <a href="/admin/content/edit/1">Edit</a>
                        <a href="/admin/content/delete/1">Delete</a>
                    </td>
                </tr>
                <!-- More content rows -->
            </tbody>
        </table>
    </section>
{% endblock %}