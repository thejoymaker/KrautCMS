{% extends '@Theme/base.html.twig' %}

{% block title %}Admin Panel - KrautCMS{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/assets/css/admin.css">
    <script src="/assets/js/admin.js" defer></script>
{% endblock %}

{% block header %}
    <div id="admin-header">
        <a href="/" target="_blank">View Home Page</a>
        <a href="#" id="clear_cache" data-action="clear-cache">Clear Cache</a>
    <nav>
        <ul id="admin-nav">
            <li><a href="#" data-section="dashboard" class="active">Dashboard</a></li>
            <li><a href="#" data-section="users">Users</a></li>
            <li><a href="#" data-section="plugins">Plugins</a></li>
            <li><a href="#" data-section="themes">Themes</a></li>
            <li><a href="#" data-section="settings">Settings</a></li>
            <li><a href="#" data-section="reports">Reports</a></li>
            <li><a href="#" data-section="content">Content</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
{% endblock %}

{% block content %}
    <section id="dashboard" class="admin-section">
        <h2>Admin Dashboard</h2>
        <h3>Overview</h3>
        <div class="stats">
            <div class="stat">
                <h4>Total Users</h4>
                <p>123</p>
            </div>
            <div class="stat">
                <h4>Total Posts</h4>
                <p>456</p>
            </div>
            <div class="stat">
                <h4>Active Sessions</h4>
                <p>78</p>
            </div>
        </div>
    </section>

    <section id="users" class="admin-section" style="display: none;">
        <h2>Manage Users</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>admin</td>
                    <td>admin@example.com</td>
                    <td>Administrator</td>
                    <td>
                        <a href="/admin/users/edit/1">Edit</a>
                        <a href="/admin/users/delete/1">Delete</a>
                    </td>
                </tr>
                <!-- More user rows -->
            </tbody>
        </table>
    </section>

    <section id="plugins" class="admin-section" style="display: none;">
        <h2>Manage Plugins</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Version</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>UserPlugin</td>
                    <td>1.0.0</td>
                    <td>
                        <a href="/admin/plugins/edit/1">Edit</a>
                        <a href="/admin/plugins/delete/1">Delete</a>
                    </td>
                </tr>
                <!-- More plugin rows -->
            </tbody>
        </table>
    </section>

    <section id="themes" class="admin-section" style="display: none;">
        <h2>Manage Themes</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Version</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>DefaultTheme</td>
                    <td>1.0.0</td>
                    <td>
                        <a href="/admin/themes/edit/1">Edit</a>
                        <a href="/admin/themes/delete/1">Delete</a>
                    </td>
                </tr>
                <!-- More theme rows -->
            </tbody>
        </table>
    </section>

    <section id="settings" class="admin-section" style="display: none;">
        <h2>Settings</h2>
        <form action="/admin/settings/save" method="post">
            <div class="form-group">
                <label for="site_name">Site Name</label>
                <input type="text" id="site_name" name="site_name" value="KrautCMS">
            </div>
            <div class="form-group">
                <label for="admin_email">Admin Email</label>
                <input type="email" id="admin_email" name="admin_email" value="admin@example.com">
            </div>
            <div class="form-group">
                <label for="timezone">Timezone</label>
                <select id="timezone" name="timezone">
                    <option value="UTC">UTC</option>
                    <option value="America/New_York">America/New_York</option>
                    <option value="Europe/Berlin">Europe/Berlin</option>
                    <!-- More timezones -->
                </select>
            </div>
            <button type="submit">Save Settings</button>
        </form>
    </section>

    <section id="reports" class="admin-section" style="display: none;">
        <h2>Reports</h2>
        <p>Generate and view various reports about your site's activity.</p>
        <button onclick="window.location.href='/admin/reports/generate'">Generate Report</button>
    </section>

    <section id="content" class="admin-section" style="display: none;">
        <h2>Manage Content</h2>
        <button onclick="window.location.href='/admin/content/create'">Create New Post</button>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Welcome to KrautCMS</td>
                    <td>admin</td>
                    <td>2023-10-01</td>
                    <td>
                        <a href="/admin/content/edit/1">Edit</a>
                        <a href="/admin/content/delete/1">Delete</a>
                    </td>
                </tr>
                <!-- More content rows -->
            </tbody>
        </table>
    </section>
{% endblock %}

{% block footer %}
    <p>&copy; {{ "now"|date("Y") }} KrautCMS. All rights reserved.</p>
{% endblock %}